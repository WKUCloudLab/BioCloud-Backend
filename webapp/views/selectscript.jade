extends base

block content

    section.container-full
        section.container-content
            span.instruction Please select a script to run the job with.

    for script in scripts
        section.container-full
            section.container-header 
                span #{script.name}
            section.container-content
                span.description #{script.description}

                script.
                    function selectScript(scriptId) {
                        $.ajax({
                            method: "POST",
                            url:"/selectscript/select",
                            data: {'script': scriptId},
                            success:function(data){
                                console.log(data);
                                window.location.href = "/createjob";
                            },
                            error:function(xhr, status, err){
                                console.log(err);
                            }
                        }).done(function( msg ){
                            console.log( "Data Saved: " + msg );
                        });
                    }

                a(onclick="selectScript('"+script.id+"')").button.submitButton Create #{script.name} Job