{
	"apiVersion": "batch/v1",
	"kind": "Job",
	"metadata": {
		"name": "fastqc10000"
	},
	"spec": {
		"template": {
			"metadata": {
				"labels": {
					"app": "fastqc"
				}
			},
			"spec": {
				"containers": [
					{
						"command": [
							"/data/jamietest.sh"
						],
						"image": "chanstag/fastqc",
						"name": "fastqc",
						"volumeMounts": [
							{
								"mountPath": "/data",
								"name": "biocloud-volume"
							}
						]
					}
				],
				"restartPolicy": "Never",
				"volumes": [
					{
						"glusterfs": {
							"endpoints": "glusterfs-cluster",
							"path": "192.168.1.104:biocloud_volume",
							"readOnly": false
						},
						"name": "biocloud-volume"
					}
				]
			}
		}
	}
}
