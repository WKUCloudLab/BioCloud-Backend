{
  "apiVersion": "batch/v1",
  "kind": "Job",
  "metadata": {
    "name": "fastqc507"
  },
  "spec": {
    "template": {
      "metadata": {
        "labels": {
          "app": "fastqc507"
        }
      },
      "spec": {
        "containers": [
          {
            "command": [
              "/data/demoDir/test.sh"
            ],
            "image": "chanstag/fastqc",
            "name": "fastqc",
            "volumeMounts": [
              {
                "mountPath": "/data",
                "name": "biocloud-volume"
              }
            ]
          }
        ],
        "restartPolicy": "Never",
        "volumes": [
          {
            "glusterfs": {
              "endpoints": "glusterfs-cluster",
              "path": "192.168.1.104:biocloud_volume",
              "readOnly": false
            },
            "name": "biocloud-volume"
          }
        ]
      }
    }
  }
}
